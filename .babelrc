{
	"presets": [["@babel/preset-env"], "@babel/preset-typescript"],

	"plugins": [
		[
			"module-resolver",
			{
				"root": ["."],
				"alias": {},
				"extensions": [".js", ".jsx", ".ts", ".es", ".es6", ".mjs"]
			}
		],
		["@babel/plugin-proposal-decorators", { "legacy": true }]
	],
	"env": {
		"test": {
			"presets": [["@babel/preset-env", { "modules": false }]]
		}
	}
}
